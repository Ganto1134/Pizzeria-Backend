@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2 class="text-center">Login</h2>
    <form asp-action="Login" method="post" class="mt-4">
        <div class="form-group w-25">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Inserisci la tua email" required>
        </div>
        <div class="form-group w-25 mt-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Inserisci la tua password" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
    </form>
</div>



