@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <h2 class="text-center">Register</h2>
    <form asp-action="Register" method="post" class="mt-4">
        <div class="form-group w-25">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" placeholder="Inserisci il tuo username" required>
        </div>
        <div class="form-group w-25 mt-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Inserisci la tua email" required>
        </div>
        <div class="form-group w-25 mt-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Inserisci la tua password" required>
        </div>
        <div class="form-group w-25 mt-3">
            <label asp-for="ConfirmPassword" class="form-label">Conferma Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Conferma la tua password" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-3">Register</button>
    </form>
</div>