@{
    ViewData["Title"] = "Home Page";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizzeria Nino</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .hero {
            background: url('hero.jpg') no-repeat center center/cover;
            color: #fff;
            text-align: center;
            padding: 100px 0;
        }
        .hero .btn {
            background-color: #ff0000;
            color: #fff;
        }
        .footer-bg {
            background-color: #333;
            color: #fff;
            padding: 20px 0;
        }
        .footer-bg a {
            color: #ff0000;
        }
    </style>
</head>
<body>
    <section class="hero d-flex align-items-center justify-content-center">
        <div class="text-center">
            <h1>Pizzeria Nino</h1>
            <p>La migliore pizza della città, direttamente a casa tua!</p>
        </div>
    </section>

    <section class="about pb-5">
        <div class="container">
            <h2 class="text-center">Chi Siamo</h2>
            <p class="text-center">Siamo una pizzeria storica, con una passione per la qualità e ingredienti freschi. Le nostre pizze sono fatte con amore e dedizione.</p>
        </div>
    </section>

    <section class="menu-highlights py-5 bg-light">
        <div class="container">
            <h2 class="text-center">Le Nostre Pizze Popolari</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="card-title">Pizza Margherita</h3>
                            <p class="card-text">Classica pizza con pomodoro, mozzarella e basilico fresco.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="card-title">Pizza Diavola</h3>
                            <p class="card-text">Salame piccante, mozzarella e peperoni.</p>
                        </div>
                    </div>
                </div>
          
            </div>
        </div>
    </section>

    <section class="special-offers py-5">
        <div class="container">
            <h2 class="text-center">Offerte Speciali</h2>
            <p class="text-center">Martedì Pizza a Metà Prezzo! Scopri tutte le nostre offerte.</p>
        </div>
    </section>

    <section class="testimonials py-5 bg-light">
        <div class="container">
            <h2 class="text-center">Testimonianze dei Clienti</h2>
            <blockquote class="blockquote text-center">
                <p class="mb-0">"La pizza migliore che abbia mai mangiato! Consigliatissima!"</p>
                <footer class="blockquote-footer mt-2">Marco R.</footer>
            </blockquote>
            <blockquote class="blockquote text-center">
                <p class="mb-0">"Ottimo servizio e pizza deliziosa!"</p>
                <footer class="blockquote-footer mt-2">Laura S.</footer>
            </blockquote>
        </div>
    </section>

    <footer class="footer-bg">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <p>Indirizzo: Via Roma 123, Milano</p>
                    <p>Telefono: 0123 456789</p>
                    <p>Email: info@pizzerianino.it</p>
                </div>
                <div class="col-md-4">
                    <div class="social-media">
                        <p>Seguici sui nostri social:</p>
                        <a href="#" class="mr-2">Facebook</a>
                        <a href="#" class="mr-2">Instagram</a>
                        <a href="#">Twitter</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <form action="#">
                        <label for="email">Iscriviti alla nostra newsletter:</label>
                        <div class="input-group">
                            <input type="email" id="email" class="form-control" placeholder="Inserisci la tua email">
                            <div class="input-group-append">
                                <button class="btn btn-danger" type="submit">Iscriviti</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>