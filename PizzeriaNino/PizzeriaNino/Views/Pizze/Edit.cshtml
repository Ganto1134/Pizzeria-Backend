@model Pizza

@{
    ViewData["Title"] = "Modifica Pizza";
}

<h2>Modifica Pizza</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mt-3">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="Foto" class="control-label">Foto URL</label>
        <input asp-for="Foto" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="Prezzo" class="control-label"></label>
        <input asp-for="Prezzo" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="Tempo" class="control-label"></label>
        <input asp-for="Tempo" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label>Ingredienti</label>
        @foreach (var ingrediente in (IEnumerable<Ingrediente>)ViewData["Ingredienti"])
        {
            <div>
                <input type="checkbox" name="ingredientiIds" value="@ingrediente.Id" @(Model.PizzaIngredienti.Any(pi => pi.IngredienteId == ingrediente.Id) ? "checked" : "") />
                <label>@ingrediente.Nome</label>
            </div>
        }
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Salva" class="btn btn-primary" />
    </div>
</form>
